# Supabase Configuration
# Required for database and authentication
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_jwt_secret
SUPABASE_DB_PASSWORD=your_database_password

# Redis Configuration
# Required for job queue and caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=optional_redis_password
REDIS_TLS_ENABLED=false
REDIS_DATABASE=0

# OpenAI Configuration
# Required for AI features
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id
OPENAI_MODEL_VERSION=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Pinecone Configuration
# Required for vector search
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=your_index_name
PINECONE_NAMESPACE=optional_namespace
PINECONE_DIMENSION=1536

# Gmail OAuth Configuration
# Required for email integration
NEXT_PUBLIC_GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
NEXT_PUBLIC_GMAIL_REDIRECT_URI=http://localhost:3000/api/integrations/gmail/callback
GMAIL_REFRESH_TOKEN=your_refresh_token
GMAIL_ACCESS_TOKEN=your_access_token

# Application Configuration
# Required for app functionality
NODE_ENV=development
APP_ENV=local
DEBUG_MODE=true
LOG_LEVEL=debug
API_VERSION=v1

# Security Configuration
# Required for app security
JWT_SECRET=your_jwt_secret
COOKIE_SECRET=your_cookie_secret
ENCRYPTION_KEY=your_encryption_key
API_KEY_SALT=your_api_key_salt

# Service Endpoints
# Required for service communication
API_BASE_URL=http://localhost:3000/api
WEBSOCKET_URL=ws://localhost:3000
CDN_URL=http://localhost:3000/cdn
METRICS_URL=http://localhost:3000/metrics

# Monitoring Configuration
# Optional but recommended for production
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Testing Configuration
# Required for testing environment
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/1
TEST_API_KEY=test_api_key 